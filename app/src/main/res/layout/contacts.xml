<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hShopper_background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/hShopper_background"
        android:orientation="vertical">


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contactTextView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/back"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="Valstybinė vartotojų teisių apsaugos tarnyba"
                    android:textColor="@color/hShopper_font"
                    android:textSize="25dp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/contactTextViewContent1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/back"
                    android:padding="5dp"
                    android:textColor="@color/hShopper_font"
                    android:textSize="20dp"
                    android:singleLine="false"
                    android:text="Telefonas: 85 3213812\n E-paštas: jonas.petraitis@vvtat.lt"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/contactTextView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/back"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="Valstybinė ne maisto produktų inspekcija"
                    android:textColor="@color/hShopper_font"
                    android:textSize="25dp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/contactTextViewContent2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/back"
                    android:padding="5dp"
                    android:textColor="@color/hShopper_font"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Telefonas: 85 3213812\n E-paštas: jonas.petraitis@malkos.lt"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/contactTextView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/back"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="Europos vartotojų centras"
                    android:textColor="@color/hShopper_font"
                    android:textSize="25dp"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/contactTextViewContent3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/back"
                    android:padding="5dp"
                    android:textColor="@color/hShopper_font"
                    android:textSize="20dp"
                    android:text="Telefonas: 85 3213812\n E-paštas: john.petraitis@malkos.eu"
                    android:gravity="center_horizontal" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>