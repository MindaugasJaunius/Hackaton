<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hShopper_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parduotuvės pavadinimas"
        android:id="@+id/shopNameTextView"
        android:textSize="25dp"
        android:textColor="@color/hShopper_font"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopNameEnteredText" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parduotuvės adresas"
        android:id="@+id/shopAddressTextView2"
        android:textSize="25dp"
        android:textColor="@color/hShopper_font"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopAddressEnteredText" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disputeReasonDropdown"
        android:spinnerMode="dropdown"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:entries="@array/dispute_reasons_array"
        android:prompt="@string/dispute_reasons_prompt"
        android:gravity="center_horizontal"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/fillFormBackButton"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/fillFormOkButton"
        android:layout_alignParentLeft="true" />

</RelativeLayout>

</LinearLayout>